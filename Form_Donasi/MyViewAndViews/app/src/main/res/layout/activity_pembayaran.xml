<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".activity_pembayaran">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-200dp"
        app:srcCompat="@drawable/ceklis" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="240dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        app:srcCompat="@drawable/pembayaran" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="Terima Kasih atas Kepercayaan Anda kepada Kami" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="78dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/hape" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:text="Bukti Donasi akan diterbitkan melalui Akun Anda kurang dari 2 Menit."
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1069D2"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="@dimen/vertical_layout"
        android:layout_marginLeft="@dimen/horizontal_layout"
        android:layout_marginRight="@dimen/horizontal_layout"
        android:layout_gravity="center"
        android:layout_marginTop="280dp"
        android:onClick="Pindah3"
        android:text="Selesai"/>

</FrameLayout>